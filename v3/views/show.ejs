<% include partials/header %>

<div class="container">
    <div class="jumbotron text-center">
        <h1><%=campgrounds.title%></h1><hr>
        <img src="<%=campgrounds.image%>" style="width:100%" alt="<%=campgrounds.title%>">
        <h3 style="text-align: left;"><%=campgrounds.desc%></h3>
        <hr>
        <h3>Submitted By: <%=campgrounds.author.username%></h3>
        <h4 class="commentsText">Comments</h4>
        <% var length = campgrounds.comments.length; %>
        <% for(i=0;i<length;i++){ %>
            <p style="text-align: left; font-size: 16px;"><strong><%=campgrounds.comments[i].username%></strong>: <%=campgrounds.comments[i].text%></p>
        <% } %>
        <a href="/campgrounds/<%=campgrounds._id%>/edit"><button class="btn btn-primary">Edit</button></a>
        <a href="/campgrounds/<%=campgrounds._id%>/comments/new"><button class="btn btn-success">Add New Comment</button></a>
        <form style="display: inline" action="/campgrounds/<%=campgrounds.id%>/?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
    
<% include partials/footer %>