<% include partials/header %>
    <div class="container new">
        <div class="row">
            <h1 class="text-center"> Edit <%=foundCampground.title%></h1>
            <div style="margin: 25px">
                <form action="/campgrounds/<%=foundCampground._id%>/edit?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[title]" value=<%=foundCampground.title%>>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[image]" value=<%=foundCampground.image%>>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="campground[desc]" rows="5"><%=foundCampground.desc%></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block"> Edit </button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>

<% include partials/footer %>